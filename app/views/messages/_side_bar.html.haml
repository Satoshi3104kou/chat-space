.side-bar
  .side-bar__user-name
    = current_user.name
    .side-bar__user-name__top-item
      .side-bar__user-name__top-item__name
        name
      .side-bar__user-name__top-item__icons
        .side-bar__user-name__top-item__icons__left
          = link_to do
            = icon('fas', 'pen-square', class: 'icon')
        .side-bar__user-name__top-item__icons__right  
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__group-list
    =link_to "#", class: "side-bar__group-list" do
      .side-bar__group-list__group1
        .side-bar__group-list__group1__name
          グループネーム
        .side-bar__group-list__group1__latest-message
          コメント



  
